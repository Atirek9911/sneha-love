.typewriter {
  color: #fff;
  font-size: 1.5rem;
  margin: 20px 0;
  border-right: 3px solid #fff;
  white-space: nowrap;
  overflow: hidden;
  animation: typing 4s steps(40, end), blink 0.75s step-end infinite;
}

@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}

@keyframes blink {
  from, to { border-color: transparent }
  50% { border-color: #fff }
}

